<!DOCTYPE html>
<html>
<head>
		<title>Farmbridge</title>

  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>

</head>
<body>
	
<!-- This is LOGO/TITLE	 -->
		<div id="header">
			<h1>Farm Bridge</h1>
			<h2><% if logged_in? -%>
			  <div id="user-bar-greeting">Logged in as <%= link_to_current_user :content_method => :login %></div>
			  <div id="user-bar-action"  >(<%= link_to "Log out", logout_path, { :title => "Log out" }    %>)</div>

			<% else -%>
			  <div id="user-bar-greeting"><%= link_to_login_with_IP 'Not logged in', :style => 'border: none;' %></div>
			  <div id="user-bar-action"  ><%= link_to "Log in",  login_path,  { :title => "Log in" } %> /
			                               <%= link_to "Sign up", signup_path, { :title => "Create an account" } %></div>
			<% end -%></h2>
		</div>
	

<!-- This is the MENU -->
		<div id="menu">
			<ul>
				<li><a href="#" accesskey="1" title="">My CSA</a></li>
				<li class="active"><a href="#" accesskey="2" title="">My Profile</a></li>
				<li><a href="#" accesskey="3" title="">People</a></li>
				<li><a href="#" accesskey="4" title="">Manager Panel</a></li>
			</ul>
		</div>
	

<!-- This is the MAIN -->
		<div id="wrapper">
			<div id="content">
				
				<div id="posts">
					<div class="post">
						<!-- <h2 class="title">Headings</h2> -->
							<div class="story"><%= yield %></div>
					</div>
				</div>
			

<!-- This is the SIDEBAR -->
				<div id="links">
					<ul>
						<li>
							<!-- <h2>Sidebar</h2> -->
							<ul>
								<li><a href="#">FB Black Magic</a> </li>
								<li><a href="#">Whatever Function</a> </li>
								<li><a href="#">Item 3</a> </li>
								<li><a href="#">Item 4</a> </li>
								<li><a href="#">Item 5</a> </li>
								<li><a href="#">Item 6</a> </li>
								<li><a href="#">Item 7</a> </li>
							</ul>
						</li>
					</ul>
				</div>


		<div style="clear: both;">&nbsp;</div>
	</div>
</div>


<!-- This is the FOOTER -->
<div id="footer">
	<p id="legal">Copyright &copy; 2010 FarmBridge</p>
	<p id="brand">FarmBridge</p>
</div>



</body>
</html>
