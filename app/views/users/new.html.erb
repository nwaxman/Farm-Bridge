<h2>Sign-up as a CSA Manager</h2>

<div id="form_main">
	<p>Required fields are highlighted in <strong>bold</strong>.</p>

	<% @user.password = @user.password_confirmation = nil %>

	<%= error_messages_for :user %>
	<%= form_for :user, :url => users_path do |f| -%>
	<%= render :partial => 'form', :locals =>  {:f => f} %>
	

	<p><strong><%= label_tag 'password' %></strong>
	<%= f.password_field :password %> (6 character minimum)</p>

	<p><strong><%= label_tag 'password_confirmation', 'Confirm Password' %></strong>
	<%= f.password_field :password_confirmation %></p>

	
	<p><%= submit_tag 'Save & Set-up CSA' %></p>

</div>


