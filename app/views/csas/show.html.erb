<h1><%= @csa.name %></h1>
<p><%= @csa.description %>Manager: <%= @csa.manager %></p>



<div id="offerings">  
<h2>Offerings</h2>

<% @csa.offerings.each do |offering| %>
<div class="offering">
	<table border="1">
	  <tr>
	    <th>Month</th>
	    <th>Savings</th>
	  </tr>
	  <tr>
	    <td>January</td>
	    <td>$100</td>
	  </tr>
	</table>
	
	<table border="1">
	  <tr>
	    <th>Name</th>
	    <th>Info	
			<table>
				<<tr>
			    	<td>January</td>
			    	<td>$100</td>
			  </tr>
		</th>
	  </tr>
	</table>
</div>	


<div class="offering">
	<h3><%= offering %></h3>
	
    <h4>No Deposit</h4>
    <% if offering.depositless_shares.blank? %>
    	<p><em>none</em></p>
    	<% else %>
		<ul>
    	<% for share in offering.depositless_shares %>
    	<li>User: <%= share.user %> [<%= link_to 'edit status', edit_share_url(share) %>]</li>
    	<% end %>
     	</ul>
    <% end %>
   
	<h4>Deposit Received</h4>
    <% if offering.deposit_received_shares.blank? %>
      <p><em>none</em></p>
    <% else %>
      <ul>
      <% for share in offering.deposit_received_shares %>
        <li>User: <%= share.user %> [<%= link_to 'edit status', edit_share_url(share) %>]</li>
      <% end %>
      </ul>
    <% end %>
    
	<h4>Paid</h4>
    <% if offering.paid_shares.blank? %>
      <p><em>none</em></p>
    <% else %>
      <ul>
      <% for share in offering.paid_shares %>
        <li>User: <%= share.user %> [<%= link_to 'edit status', edit_share_url(share) %>]</li>
      <% end %>
      </ul>
    <% end %>

  </div>
<% end %>
</div>



<%= link_to 'add another offering', new_csa_offering_url(@csa) %>