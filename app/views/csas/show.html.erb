<h1><%= @csa.name %></h1>
<p>Manager: <%= @csa.manager %></p>
<p><strong>Description</strong><br/>
<%= @csa.description %></p>
  
<h2>Members</h2>



<div class="tabletitle">
<table>
<tr>
	<td class="tbname">Member</th>
	<td class="tbshare">Share</th>
	<td class="tbpayment">Payment Status</th>
<tr>
</table>
</div>

<% Member.members_for_csa(@csa).each do |member| 
   shares = member.user.shares %>
	
	<div class="tablewrapper">
	<table>
	
			<tr>
				<td class="tbname"><%= member.user.name %></td>
				<td class="tbshare">
					<table>
						<% shares.each do |share| %>

							<% if share.offering.csa.id == @csa.id %>

								<tr>
									<td><%= share.offering.to_s %></td>
								</tr>	

							<% end %>

						<% end %>
					</table>
				</td>
				<td class="tbpayment">
					<table>
						<% shares.each do |share| %>

							<tr>
								<td>

									<% if share.paid %>
										Paid
									<% elsif share.deposit_received %>
										Deposit Received
									<% else %>
										No deposit
									<% end %>
									
									[<%= link_to 'Edit', edit_share_url(share) %>]

								</td>
							</tr>

						<% end %>
					
					</table>
				</td>
			</tr>
	
	</table>
	</div>
	
<% end %>


<h1>Members by share</h1>
<div id="offerings">  

<% @csa.offerings.each do |offering| %>

<div class="offering">
	<h3><%= offering %></h3>
    <h4>No Deposit</h4>
    <% if offering.depositless_shares.blank? %>
    	<p><em>none</em></p>
    	<% else %>
		<ul>
    	<% for share in offering.depositless_shares %>
    	<li>User: <%= share.user %> [<%= link_to 'edit status', edit_share_url(share) %>]</li>
    	<% end %>
     	</ul>
    <% end %>
   
	<h4>Deposit Received</h4>
    <% if offering.deposit_received_shares.blank? %>
      <p><em>none</em></p>
    <% else %>
      <ul>
      <% for share in offering.deposit_received_shares %>
        <li>User: <%= share.user %> [<%= link_to 'edit status', edit_share_url(share) %>]</li>
      <% end %>
      </ul>
    <% end %>
    
	<h4>Paid</h4>
    <% if offering.paid_shares.blank? %>
      <p><em>none</em></p>
    <% else %>
      <ul>
      <% for share in offering.paid_shares %>
        <li>User: <%= share.user %> [<%= link_to 'edit status', edit_share_url(share) %>]</li>
      <% end %>
      </ul>
    <% end %>

  </div>
<% end %>
</div>